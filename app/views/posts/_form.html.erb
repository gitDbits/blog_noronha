<%= form_with(model: post, local: true) do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <div class="notification is-danger" role="alert">
        <strong>
          <h2 class="title" has-text-color="white"><strong>Atenção...</strong></h2>
        </strong>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </div>
    </div>
  <% end %>
  </br>
  <div class="file">
    <label class="file-label">
      <%= f.file_field :featured_image, class: 'file-input' %>
      <span class="file-cta">
        <span class="file-icon">
          <i class="fas fa-upload"></i>
        </span>
        <span class="file-label">
          Escolha a imagem de destaque…
        </span>
      </span>
    </label>
  </div>
  </br>
  <div class="field">
    <%= f.label 'Título', class: 'label' %>
    <div class="control">
      <%= f.text_field :title, class: 'input' %>
    </div>
  </div>
  <div class="field">
    <%= f.label 'Autor', class: 'label' %>
    <div class="control">
      <%= f.text_field :author, class: 'input' %>
    </div>
  </div>
  <div class="field">
    <%= f.label 'Conteúdo', class: 'label' %>
    <%= f.rich_text_area :content %>
  </div>
  <div class="field is-grouped">
    <div class="control">
      <%= f.submit 'Criar', class: 'button is-link' %>
    </div>
    <div class="control">
      <%= link_to 'Voltar', posts_path, class: 'button is-link is-light' %>
    </div>
  </div>
<% end %>